# Keeviqo Environment Configuration Example
# Copy this file to .env and update with your actual values

# Server configuration
PORT=3000
NODE_ENV=development

# Database configuration
# Replace with your actual database connection string
DATABASE_URL=postgres://username:password@localhost:5432/keeviqo
TEST_DATABASE_URL=postgres://username:password@localhost:5432/keeviqo_test

# Security
# Generate a strong random secret for production (e.g., using `openssl rand -hex 24`)
SESSION_SECRET=your-session-secret-here

# File upload configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB

# Feature flags
ENABLE_QR_GENERATOR=true
ENABLE_EMERGENCY_MODE=true
ENABLE_SMART_SCAN=true
ENABLE_PAYMENT_SYSTEM=true
